{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">
            Ecrit le {{ article.createAt | date('d/m/Y') }} à {{ article.createAt | date('H:i') }}
        </div>
        <div class="content">
            <img src="{{ article.image }}" style="width: 200px;height:auto">
            {{ article.content | raw }}
        </div>
    </article>
    {% if app.user %}
    {{ form(commentForm) }}
    {% endif %}
    <section id="commentaires">
        <h1> {{ article.comments | length }} Commentaires</h1>
        {% for comment in article.comments %}
        <div class="comment">
            <div class="row">
                <div class="col-3">
                    {{ comment.author }} (<small>{{ comment.createdAt | date('d/m/Y à H:i')}}</small>
                </div>
                <div class="col">
                    {{ comment.content | raw }}
                </div>
            </div>
        </div>
        {% endfor %}
    </section>

{% endblock %}
