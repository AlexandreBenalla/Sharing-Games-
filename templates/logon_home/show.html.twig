{% extends 'base.html.twig' %}

{% block title %}Hello LogonHomeController!{% endblock %}

{% block body %}
    {% for article in articles %}
        <article>
            <h2>{{ article.title }}</h2>
            <div class="metadata">Ecrit le {{ article.createAt | date('d/m/Y') }} à {{ article.createAt | date('H:i')}} dans la/les catégories TODO TAGS</div>
            <div class="content">
                <img src="{{ article.image }}" style="width: 100px;height:auto">
                <a href="{{ path('article_show', {'id': article.id}) }}" class="btn
                btn-primary">Lire la suite</a>
            </div>
        </article>
    {% endfor %}
{% endblock %}
